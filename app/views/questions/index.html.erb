<div class="base-container">
  <h2>新規投稿</h2>
  <%= form_with model: @question, local: true do |f| %>
    <div class="form-group">
      <%= f.label :title, "【質問】", class: "control-label" %>
      <%= f.text_area :title, class: "form-control", rows:3%>
    </div>
    <div class="form-group">
      <%= f.label :detail, "【詳細】", class: "control-label" %>
      <%= f.text_area :detail, class: "form-control", rows:5 %>
    </div>
    <%= f.submit "送信", class: "btn btn-primary btn-block btn-lg", data: {confirm: "新規投稿しますか？"}%>
  <% end %>
  <div class="questions-container">
    <% @questions.each do |question|%>
      <a href="/questions/<%= question.id %>">
        <div class="question">
          <div class="row">
            <div class="col-md-7">
              <div class="title-container">
                <p><%= question.title.truncate(50) %></p>
              </div>
            </div>
            <div class="col-md-5">
              <div class="info text-right">
                <p>質問日 <%= l question.created_at %></p>
                <p>Views</p>
              </div>
            </div>
          </div>
        </div>
      </a>
    <% end %>
  </div>
</div>


