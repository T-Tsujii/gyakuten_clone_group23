<div class ="q-container">
  <h5>【質問】</h5>
  <p><%= @question.title %></p>
  <hr>
  <h5>【詳細】</h5>
  <div class="markdown-container">
    <%= markdown(@question.detail).html_safe %>
  </div>
  <hr>
  <% @solutions.each do |solution|%>
      <a href="/solutions/<%= solution.id %>">
        <div class="question">
          <div class="row">
            <div class="col-md-7">
              <div class="title-container">
                <p><%= solution.title.truncate(50) %></p>
              </div>
            </div>
            <div class="col-md-5">
              <div class="info text-right">
                <p>回答日 <%= l solution.created_at %></p>
                <p>Views</p>
              </div>
            </div>
          </div>
        </div>
      </a>
    <% end %>
  <h5>回答投稿</h5>
  <%= form_with model: [@question,@solution], local: true do |f| %>
    <div class="form-group">
      <%= f.label :title, "【タイトル】", class: "control-label" %>
      <%= f.text_area :title, class: "form-control", rows:3%>
    </div>
    <div class="form-group">
      <%= f.label :detail, "【詳細】", class: "control-label" %>
      <%= f.text_area :detail, class: "form-control", rows:5 %>
    </div>
    <%= f.submit "送信", class: "btn btn-primary btn-block btn-lg", data: {confirm: "新規投稿しますか？"}%>
  <% end %>
</div>
